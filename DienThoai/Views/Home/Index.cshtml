@model IEnumerable<DienThoai.Models.SanPham>
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<!-- body -->

<div><a href="~/account/register">Đăng ký</a></div>
<div><a href="~/account/login">Đăng nhập</a></div>

<body class="main-layout ">
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">

            <div class="container">
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <div class="location_icon_bottum">
                            <ul>
                                <li><img src="~/icon/call.png" />0393757858</li>
                                <li><img src="~/icon/email.png" />thanhtoan0499@gmail.com</li>
                                <li><a href="https://goo.gl/maps/AeHm5DFbKjhoQH6VA"><img src="~/icon/loc.png" />Location</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end header inner -->
    </header>
     <!-- end header -->
    <section class="slider_section">
        <div id="myCarousel" class="carousel slide banner-main" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="first-slide" src="~/image/800-200-800x200-134.png" alt="First slide">
                   <div class="container">
                        <div class="carousel-caption relative">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="second-slide" src="~/image/800-200-800x200-147.png" alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption relative">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="third-slide" src="~/image/800-200-800x200-189.png" alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption relative">
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <i class='fa fa-angle-left'></i>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <i class='fa fa-angle-right'></i>
            </a>
        </div>
    </section>

    <!-- brand -->
    <div class="brand">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Điện thoại</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="brand-bg">
            <div class="container">
                <div class="row">
                             @foreach (var item in Model) {
                                 <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
                                <div class="brand_box">
                                 <tr>
                                      <td>
                                        <img src="@Url.Content("~")/Image/@item.ImageName" style="width:300px; height:200px;"/>
                                    </td>
                                    <br>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSanPham)
                                    </td>
                                    <br>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gia)
                                    </td>
                                </tr>
                                </div>
                                </div> 
                             }
                                        <div class="col-md-12">
                                        <a class="read-more">Xem thêm</a>
                                    </div>
                                </div>
                            </div>

    <!-- end brand -->
    <!-- contact -->
    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Cần tư vấn</h2>
                    </div>
                    <form class="main_form">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                <input class="form-control" placeholder="Your name" type="text" name="Your Name">
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                <input class="form-control" placeholder="Email" type="text" name="Email">
                            </div>
                            <div class=" col-md-12">
                                <input class="form-control" placeholder="Phone" type="text" name="Phone">
                            </div>
                            <div class="col-md-12">
                                <textarea class="textarea" placeholder="Message"></textarea>
                            </div>
                            <div class=" col-md-12">
                                <button class="send">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact -->
   
</body>

</html>